<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.restcalls.MainActivity">

    <Button
        android:id="@+id/btnNative"
        android:text="Native (HttpUrlConnection)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/btnOkhttpSync"
        android:text="Okhttp Sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/btnOkhttpAsync"
        android:text="Okhttp Async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/btnRetrofitSync"
        android:text="Retrofit Sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/btnRetrofitAsync"
        android:text="Retrofit Async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClicked"/>

</LinearLayout>
